{
    "name": "Node.js & TypeScript",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "16-bullseye"
        }
    },
    "features": {
		"github-cli": "latest",
		"powershell": "latest",
        "dotnet": "latest"
    },
    "extensions": [
		"ms-dotnettools.vscode-dotnet-runtime",
		"microsoft-IsvExpTools.powerplatform-vscode",
		"GitHub.copilot",
		"GitHub.copilot-labs"
	],
    "forwardPorts": [
        8181
    ],
    "remoteUser": "node"
}